<UserControl x:Class="hexaGonalClient.game.util.ComboSwitchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hexaGonalClient.game.util"
             mc:Ignorable="d" 
             FontSize="18"
             d:DesignHeight="35" d:DesignWidth="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="40"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Name="ButtonPrev" Grid.Column="0" Click="ButtonPrev_Click" BorderThickness="0" Background="#EEE" FontWeight="ExtraBold" FontSize="20" Foreground="#444">&#9664;</Button>
        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="2"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="2"></RowDefinition>
            </Grid.RowDefinitions>
            <Rectangle Grid.Row="0" Fill="#EEE"></Rectangle>
            <Rectangle Grid.Row="1" Fill="#444"></Rectangle>
            <TextBlock Grid.Row="1" Name="TxtBlock" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center">Sample Text</TextBlock>
            <Rectangle Grid.Row="2" Fill="#EEE"></Rectangle>
        </Grid>
        <Button Name="ButtonNext" Grid.Column="2" Click="ButtonNext_Click" BorderThickness="0" Background="#EEE" FontWeight="ExtraBold" FontSize="20" Foreground="#444">&#9654;</Button>
            
    </Grid>
</UserControl>
